<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageButton
        android:id="@+id/volume_muted"
        android:layout_width="@dimen/play_control_button_size"
        android:layout_height="@dimen/play_control_button_size"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/volume_muted_button"
        android:visibility="invisible"
        style="?android:attr/borderlessButtonStyle"/>
    
    <ImageButton 
        android:id="@+id/volume_low"
        android:layout_width="@dimen/play_control_button_size"
        android:layout_height="@dimen/play_control_button_size"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/volume_low_button"
        android:visibility="invisible"
        style="?android:attr/borderlessButtonStyle"/>
    
    <ImageButton 
        android:id="@+id/volume_mid"
        android:layout_width="@dimen/play_control_button_size"
        android:layout_height="@dimen/play_control_button_size"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/volume_mid_button"
        style="?android:attr/borderlessButtonStyle"/>
    <ImageButton 
        android:id="@+id/volume_high"
        android:layout_width="@dimen/play_control_button_size"
        android:layout_height="@dimen/play_control_button_size"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/volume_high_button"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>
